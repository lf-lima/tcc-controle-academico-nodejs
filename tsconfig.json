{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "#domain/*": [
        "src/1-domain/*"
      ],
      "#business/*": [
        "src/2-business/*"
      ],
      "#gateway/*": [
        "src/3-gateway/*"
      ],
      "#framework/*": [
        "src/4-framework/*"
      ]
    },
    "lib": [
      "ES6"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
